    #include <iostream>
    #include <vector>
    using namespace std;
     
    int main()
    {
        int m,n;
        cin>>m>>n;
     
        int size = m * n;
     
        if(size % 2 == 0)
        {
            cout<<size/2<<endl;
        }
        else{
            cout<<(size-1)/2<<endl;
        }
        return 0;
    };
