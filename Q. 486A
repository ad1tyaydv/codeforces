#include <iostream>
#include <vector>
using namespace std;

long long fun(long long n)
{
    long long sum;

    if(n % 2 == 0) {
        sum = n / 2;
    }
    else {
        sum = ((n+1) / 2) * (-1);
    }
    return sum;
}

int main() 
{
    long long n;
    cin>>n;
    cout<<fun(n)<<endl;
    return 0;
}
