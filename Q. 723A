#include <iostream>
#include <type_traits>
#include <vector>
#include <string>
#include <algorithm>
#include <stack>
#include <queue>
#include <deque>
#include <bits/stdc++.h>

using namespace std;

typedef long long ll;

int main() {

    int ans;
    
    int arr[3];
    for(int i=0;i<3;i++) {
        cin>>arr[i];
    }

    sort(arr, arr + 3);

    ans = (arr[2] - arr[1]) + (arr[1] - arr[0]);

    cout<<ans<<endl;
    return 0;
}
